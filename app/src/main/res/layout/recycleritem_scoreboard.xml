<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_namewithcnages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_name"
        app:layout_constraintTop_toTopOf="@+id/textView_name" />

    <ImageView
        android:id="@+id/imageView_person"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:text="name:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_person"
        app:layout_constraintTop_toTopOf="@+id/imageView_person" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="tries:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_person"
        app:layout_constraintStart_toStartOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_scorewithchanges"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView_namewithcnages"
        app:layout_constraintStart_toEndOf="@+id/textView_score"
        app:layout_constraintTop_toTopOf="@+id/textView_score" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-50dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/textView_namewithcnages"
        app:layout_constraintStart_toEndOf="@+id/imageView_person"
        app:layout_constraintTop_toBottomOf="@+id/imageView_person" />
</androidx.constraintlayout.widget.ConstraintLayout>